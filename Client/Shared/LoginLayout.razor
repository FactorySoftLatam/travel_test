@inherits LayoutComponentBase

<RadzenDialog />
<RadzenNotification />
<RadzenTooltip />
<RadzenContextMenu />

<RadzenLayout style="background: url('images/login.jpg'); background-size: cover;">
    <RadzenBody>
        <div class="container" style="height: 100%">
            <div class="row align-items-center " style="height: 100%">
                <div class="col-12 py-3">
                    <RadzenCard class="rz-shadow-5 rz-border-radius-4" style="padding: 0; overflow: hidden">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-12 col-md-6 rz-background-color-primary p-5 position-relative" 
                                    style="background-image: radial-gradient(circle at 4rem 4rem, var(--rz-primary-light) 0%, var(--rz-primary) 40%, var(--rz-primary-darker) 70%);">
                                    @*<RadzenImage Path="/images/logo.svg" style="width: 120px"></RadzenImage>*@                                          
                                    <RadzenText Text="Travel Library Bienvenido!" TextStyle="Radzen.Blazor.TextStyle.H2" class="mt-1 mt-md-3 pt-0 pt-md-3 mb-2 rz-color-white d-none d-sm-block" />
                                    <RadzenText TextStyle="Radzen.Blazor.TextStyle.Body1" class="mb-5 pb-0 pb-md-5 rz-color-white d-none d-sm-block">
                                        Complete sus credenciales de inicio de sesión para continuar.
                                    </RadzenText>
                                </div>
                                <div class="col-12 col-md-6 p-5">
                                    @Body
                                </div>
                            </div>
                        </div>
                    </RadzenCard>
                    <RadzenText Text="Travel Library v.1.0.0, Copyright Ⓒ 2023" TextStyle="Radzen.Blazor.TextStyle.Caption" 
                        TextAlign="Radzen.TextAlign.Center" Style="width: 100%; margin-top: 20px" TagName="Radzen.Blazor.TagName.P"/>
                </div>
            </div>
        </div>
    </RadzenBody>
</RadzenLayout>
