@page "/autores"

@attribute [Authorize]

<PageTitle>Autores</PageTitle>
<div class="row" style="margin-bottom: 1rem">
    <div class="col-12 col-md-6">
        <RadzenText Text="Autores" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
    </div>
    <div class="col-12 col-md-6 justify-content-start justify-content-md-end" style="display: flex; align-items: center; flex-wrap: wrap; gap: 0.5rem">
    <RadzenSplitButton Icon="get_app" style="margin-left: 10px; margin-bottom: 10px" Text="Export" Click="@ExportClick" Variant="Variant.Flat" Shade="Shade.Lighter">
        <RadzenSplitButtonItem Text="Excel" Value="xlsx" />
        <RadzenSplitButtonItem Text="CSV" Value="csv" />
    </RadzenSplitButton>
    <RadzenButton Icon="add_circle_outline" style="margin-bottom: 10px" Text="Adicionar" Click="@AddButtonClick" Variant="Variant.Flat" />
    </div>
</div>
<div class="row" style="margin-bottom: 1rem">
    <div class="col-12">
        <RadzenTextBox Placeholder="Search ..." style="display: block; width: 100%" @oninput="@Search" />
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <RadzenDataGrid @ref="grid0" ColumnWidth="200px"  AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true"
            Data="@autores" Count=count LoadData=@Grid0LoadData  TItem="TravelLibrary.Server.Models.dbTravelLIB.Autore" RowDoubleClick="@EditRow" >
            <Columns>
                <RadzenDataGridColumn TItem="TravelLibrary.Server.Models.dbTravelLIB.Autore" Property="id" Title="id">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="TravelLibrary.Server.Models.dbTravelLIB.Autore" Property="nombre" Title="nombre">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="TravelLibrary.Server.Models.dbTravelLIB.Autore" Property="apellidos" Title="apellidos">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="TravelLibrary.Server.Models.dbTravelLIB.Autore" Property="autor" Title="autor">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="TravelLibrary.Server.Models.dbTravelLIB.Autore" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                    <Template Context="autore">

                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                            Shade="Shade.Lighter" Variant="Variant.Flat"
                            Click=@(args => GridDeleteButtonClick(args, autore)) @onclick:stopPropagation="true" />
                    </Template>
                </RadzenDataGridColumn>
            </Columns>
        </RadzenDataGrid>
    </div>
</div>
